<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="120dp"
              android:orientation="horizontal">

    <audible.katkov.com.testaudible.ui.view.ProgressImageView
            android:id="@+id/selfieLarge"
            android:layout_width="0dp"
            android:layout_weight="0.66"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/imageview_horizontal_margin"
            android:paddingRight="@dimen/imageview_horizontal_margin"
            android:paddingTop="@dimen/imageview_vertical_margin"
            android:paddingBottom="@dimen/imageview_vertical_margin"
            android:src="@mipmap/ic_launcher" />

<LinearLayout android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_weight="0.33"
              android:orientation="vertical">

    <audible.katkov.com.testaudible.ui.view.ProgressImageView
        android:id="@+id/selfieSmallTop"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:paddingLeft="@dimen/imageview_horizontal_margin"
        android:paddingRight="@dimen/imageview_horizontal_margin"
        android:paddingTop="@dimen/imageview_vertical_margin"
        android:paddingBottom="@dimen/imageview_vertical_margin"
        android:src="@mipmap/ic_launcher" />

    <audible.katkov.com.testaudible.ui.view.ProgressImageView
        android:id="@+id/selfieSmallBottom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:paddingLeft="@dimen/imageview_horizontal_margin"
        android:paddingRight="@dimen/imageview_horizontal_margin"
        android:paddingTop="@dimen/imageview_vertical_margin"
        android:paddingBottom="@dimen/imageview_vertical_margin"
        android:src="@mipmap/ic_launcher" />

</LinearLayout>

</LinearLayout>